<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.plusapp.loopjandroidasynchttptest.MainActivity">

    <EditText
        android:id="@+id/keyword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="장소나 주소 입력"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button android:layout_height="wrap_content" android:layout_width="368dp" app:layout_constraintTop_toBottomOf="@+id/keyword"
            tools:layout_editor_absoluteX="8dp" android:text="실행" android:onClick="getDataFromServer"/>

</android.support.constraint.ConstraintLayout>
